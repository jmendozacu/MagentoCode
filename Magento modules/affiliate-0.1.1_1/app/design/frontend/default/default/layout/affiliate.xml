		</reference>
	</affiliate_account_commission>
	<affiliate_account_viewpayment>
		<reference name="root">
			<action method="setTemplate"><template>page/2columns-left.phtml</template></action>
		</reference>
		<reference name="head">
			<action method="addCss"><styleSheet>magebuzz/css/affiliate.css</styleSheet></action>
		</reference>
		<reference name="content">
			<block type="affiliate/account_payment" name="affiliate.marketing.view.payment" template="affiliate/account/payment.phtml" />
		</reference>
		<reference name="left">
			<block type="affiliate/account_leftmenu" name="affiliate.account.leftmenu" template="affiliate/account/navigation.phtml" before="-"/>
		</reference>
	</affiliate_account_viewpayment>
	<customer_account>
		<reference name="customer_account_navigation">
			<action method="addLink" translate="label" module="affiliate">
				<name>affiliate</name>
				<path>affiliate/account/index</path>
				<label>Affiliate</label>
			</action>
		</reference>
	</customer_account>
</layout> 