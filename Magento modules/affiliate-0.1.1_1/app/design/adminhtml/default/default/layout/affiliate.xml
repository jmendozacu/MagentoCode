<?xml version="1.0"?>
<layout version="0.1.0">
	<affiliate_adminhtml_affiliate_index>
		<reference name="content">
			<block type="affiliate/adminhtml_affiliate" name="affiliate" />
		</reference>
	</affiliate_adminhtml_affiliate_index>
	<affiliate_adminhtml_affiliate_viewrequest>
		<reference name="content">
			<block type="affiliate/adminhtml_request_view" name="view.request" />
		</reference>
	</affiliate_adminhtml_affiliate_viewrequest>
	<affiliate_adminhtml_payment_statistic>
		<reference name="head">
			<action method="addJs"><script>jQueryPlot/dist/jquery.min.js</script></action>
<!-- 			<action method="addJs"><script>jQueryPlot/dist/noConflict.js</script></action> -->
			<action method="addJs"><script>jQueryPlot/dist/jquery.jqplot.min.js</script></action>
			<action method="addJs"><script>jQueryPlot/dist/plugins/jqplot.cursor.min.js</script></action>
<!-- 			<action method="addJs"><script>jQueryPlot/dist/plugins/jqplot.barRenderer.min.js</script></action>
			<action method="addJs"><script>jQueryPlot/dist/plugins/jqplot.categoryAxisRenderer.min.js</script></action> -->
			<action method="addJs"><script>jQueryPlot/dist/plugins/jqplot.pointLabels.min.js</script></action>
			<action method="addJs"><script>jQueryPlot/dist/plugins/jqplot.dateAxisRenderer.min.js</script></action>
			<action method="addCss"><stylesheet>jQueryPlot/jquery.jqplot.min.css</stylesheet></action>
		</reference>
		<reference name="content">
			<block type="affiliate/adminhtml_payment_statistic" name="payment.statistic" template="affiliate/statistic.phtml"/>
		</reference>
	</affiliate_adminhtml_payment_statistic>
	<affiliate_adminhtml_affiliate_viewpaymenthistory>
		<reference name="content">
			<block type="affiliate/adminhtml_request_viewHistoryGridContainer" name="view.payment.history" />
		</reference>
	</affiliate_adminhtml_affiliate_viewpaymenthistory>
	<affiliate_adminhtml_affiliate_viewspecificrequest>
		<reference name="content">
			<block type="affiliate/adminhtml_request_responseFormContainer" name="view.response" />
		</reference>
	</affiliate_adminhtml_affiliate_viewspecificrequest>
	<affiliate_adminhtml_affiliate_create_index>
		<reference name="content">
			<block type="affiliate/adminhtml_affiliate_create" name="affiliate.new"/>				
		</reference>				
	</affiliate_adminhtml_affiliate_create_index>
	<affiliate_adminhtml_campaign_index>
		<reference name="content">
			<block type="affiliate/adminhtml_campaign" name="campaign" />
		</reference>
	</affiliate_adminhtml_campaign_index>
	<affiliate_adminhtml_campaign_productlist>
		<block type="core/text_list" name="root">
			<block type="affiliate/adminhtml_campaign_edit_tab_products" name="campaign.edit.tab.products"/>
			<block type="adminhtml/widget_grid_serializer" name="related_grid_serializer">
				<action method="initSerializerBlock">
					<grid_block_name>campaign.edit.tab.products</grid_block_name>
					<data_callback>getSelectedProducts</data_callback>
					<hidden_input_name>in_campaign_product</hidden_input_name>
					<reload_param_name>oproduct</reload_param_name>
				</action>
				<action method="addColumnInputName">
					<input_name>position</input_name>
				</action>
			</block>
		</block>
	</affiliate_adminhtml_campaign_productlist>
	<affiliate_adminhtml_campaign_productlistgrid>
		<block type="core/text_list" name="root">
			<block type="affiliate/adminhtml_campaign_edit_tab_products" name="campaign.edit.tab.products"/>
		</block>
	</affiliate_adminhtml_campaign_productlistgrid>
	<affiliate_adminhtml_campaign_categorylist>
		<block type="core/text_list" name="root">
			<block type="affiliate/adminhtml_campaign_edit_tab_categories" name="campaign.edit.tab.categories"/>
			<block type="adminhtml/widget_grid_serializer" name="related_grid_serializer">
				<action method="initSerializerBlock">
					<grid_block_name>campaign.edit.tab.categories</grid_block_name>
					<data_callback>getSelectedCategories</data_callback>
					<hidden_input_name>in_campaign_category</hidden_input_name>
					<reload_param_name>ocategory</reload_param_name>
				</action>
				<action method="addColumnInputName">
					<input_name>position</input_name>
				</action>
			</block>
		</block>
	</affiliate_adminhtml_campaign_categorylist>
	<affiliate_adminhtml_campaign_categorylistgrid>
		<block type="core/text_list" name="root">
			<block type="affiliate/adminhtml_campaign_edit_tab_categories" name="campaign.edit.tab.categories"/>
		</block>
	</affiliate_adminhtml_campaign_categorylistgrid>
	
	<affiliate_adminhtml_campaign_categories>
		<block type="core/text_list" name="root" output="toHtml">
			<block type="affiliate/adminhtml_campaign_edit_tab_categories" name="campaign.edit.tab.categories"/>
		</block>
	</affiliate_adminhtml_campaign_categories>
	
	<affiliate_adminhtml_banner_index>
		<reference name="content">
			<block type="affiliate/adminhtml_banner" name="banner" />
		</reference>
	</affiliate_adminhtml_banner_index>
</layout>